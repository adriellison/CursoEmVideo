algoritmo "primeiro"
// Disciplina   : [Linguagem e Lógica de Programação]
var
   msg: caractere

inicio
      msg <- "ola mundo"
      escreval("msg")
      escreval(msg)
      escreval("mensagem ", msg)
      escreval("escrever em outra linha")
      escreva("mais uma linha")//a ultima linha não precisa ter escreval,
      //pq a linha de cima já quebra a linha!
fimalgoritmo